<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".SignupActivity">

    <!-- Name Field -->
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="12dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="12dp" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp" />

    <!-- Role Selection -->
    <RadioGroup
        android:id="@+id/roleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger"
            android:textColor="#000000" />
    </RadioGroup>

    <!-- Vehicle Information (Visible only for Drivers) -->
    <EditText
        android:id="@+id/vehicleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Type"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/vehicleMake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Make"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/vehicleYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Year"
        android:inputType="number"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/vehicleLicensePlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="License Plate"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/pricePerKm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price per Km"
        android:inputType="numberDecimal"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Sign-Up Button -->
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="18sp"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Move to Login -->
    <TextView
        android:id="@+id/move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#03A9F4"
        android:text="Already have an account? Log in here"
        android:layout_gravity="center" />
</LinearLayout>
